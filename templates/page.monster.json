{
  "sections": {
    "hero-image": {
      "type": "image-banner",
      "settings": {
        "image": "{{ page.metafields.custom.hero_image.value }}",
        "image_overlay_opacity": 0,
        "image_height": "adapt",
        "desktop_content_position": "middle-center",
        "show_text_box": true,
        "desktop_content_alignment": "center",
        "color_scheme": "",
        "image_behavior": "none",
        "mobile_content_alignment": "center",
        "stack_images_on_mobile": true,
        "show_text_below": true
      }
    },
    "main": {
      "type": "monster",
      "settings": {
        "padding_top": 28,
        "padding_bottom": 28
      }
    }
  },
  "order": [
    "hero-image",
    "main"
  ]
}
