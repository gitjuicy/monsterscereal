{%- liquid
  assign half_width = '50vw'
  assign full_width = '100vw'
  assign stacked_sizes = '(min-width: 750px) 50vw, 100vw'
  assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
-%}

<div className="relative text-center flex flex-col items-center gap-5 justify-center w-full min-h-full bg-gradient-to-b from-green via to-black">
  {%- if section.settings.image != blank -%}
    <div>
      {%- liquid
        assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
        if section.settings.image_2 != blank
          assign image_class = 'banner__media-image-half'
        endif
        if section.settings.image_2 != blank and section.settings.stack_images_on_mobile
          assign sizes = stacked_sizes
        elsif section.settings.image_2 != blank
          assign sizes = half_width
        else
          assign sizes = full_width
        endif
      -%}
      {{
        section.settings.image
        | image_url: width: 3840
        | image_tag:
          loading: 'lazy',
          width: section.settings.image.width,
          height: image_height,
          class: image_class,
          sizes: sizes,
          widths: widths
      }}
    </div>
  {%- endif -%}
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'heading' -%}
        <h1 class="mt-[50px] sm:mt-[75px] md:mt-[100px] font-coop text-2xl sm:text-5xl md:text-6xl">
          {{ block.settings.heading }}
        </h1>
      {%- when 'text' -%}
        <p class="text-center inline-block mx-auto w-4/5 md:w-4/5 font-helvetica font-bold sm:text-lg md:text-3xl">
          {{ block.settings.text }}
        </p>
      {%-  when 'buttons' -%}
        <a
          role="link"
          href="{{ block.settings.button_link_1 }}"
          class="font-helvetica display: inline-block bg-black hover:bg-black-light text-white text-lg md:text-2xl font-bold text-center w-1/3 min-w-200 py-2 border-2 border-white"
        >
          {{- block.settings.button_label_1 | escape -}}
        </a>
    {%- endcase -%}  
  {%- endfor -%}
  {% comment %} <img src={hero} alt="" role="none" className="" /> {% endcomment %}
  {% comment %} <div className="absolute w-full bottom-5 md:bottom-12">
  </div> {% endcomment %}
</div>

{% schema %}
{
  "name": "t:sections.carmella-hero.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.carmella-hero.settings.image.label"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.carmella-hero.blocks.heading.name",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Carmella Hero",
          "label": "t:sections.carmella-hero.blocks.heading.settings.label"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.carmella-hero.blocks.text.name",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "default": "The Monster's are back",
          "label": "t:sections.carmella-hero.blocks.text.settings.text.label"
        }
      ]
    },
    {
      "type": "buttons",
      "name": "t:sections.carmella-hero.blocks.buttons.name",
      "settings": [
        {
          "type": "text",
          "id": "button_label_1",
          "default": "Button label",
          "label": "t:sections.carmella-hero.blocks.buttons.settings.button_label_1.label"
        },
        {
          "type": "url",
          "id": "button_link_1",
          "label": "t:sections.carmella-hero.blocks.buttons.settings.button_link_1.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.carmella-hero.preset.name",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "buttons"
        }
      ]
    }
  ]
}
{% endschema %}