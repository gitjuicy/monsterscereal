<div class="relative text-center flex flex-col items-center gap-5 justify-center w-full min-h-full bg-gradient-to-b from-green via to-black">
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'heading' -%}
        <h1 class="mt-[50px] sm:mt-[75px] md:mt-[100px] font-coop text-[24px] leading-[32px] sm:text-[48px] sm:leading-none md:text-[70px] md:leading-none">
          {{ block.settings.heading }}
        </h1>
      {%- when 'text' -%}
        <p class="text-center inline-block mx-auto w-4/5 md:w-4/5 font-helvetica font-bold text-black sm:text-[18px] sm:leading-[28xp] md:text-[30px] md:leading-[36px]">
          {{ block.settings.text }}
        </p>
      {%- when 'buttons' -%}
        {{ section.settings.image | image_url: width: 3840 | image_tag: loading: 'lazy' }}
        <div class="absolute w-full bottom-[20px] md:bottom-[48px]">
          <a
            role="link"
            href="{{ block.settings.button_link_1 }}"
            class="font-helvetica inline-block bg-black hover:bg-black-light text-white text-[18px] leading-[28px] md:text-[24px] md:leading-[32[px] font-bold text-center w-1/3 min-w-200 py-[8px] border-2 border-white"
          >
            {{- block.settings.button_label_1 | escape -}}
          </a>
        </div>
    {%- endcase -%}
  {%- endfor -%}
</div>

{% schema %}
{
  "name": "Home Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-banner.settings.image.label"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.image-banner.blocks.heading.name",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Carmella Hero",
          "label": "t:sections.image-banner.blocks.heading.settings.label"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.image-banner.blocks.text.name",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "default": "The Monster's are back",
          "label": "t:sections.image-banner.blocks.text.settings.text.label"
        }
      ]
    },
    {
      "type": "buttons",
      "name": "t:sections.image-banner.blocks.buttons.name",
      "settings": [
        {
          "type": "text",
          "id": "button_label_1",
          "default": "Button label",
          "label": "t:sections.image-banner.blocks.buttons.settings.button_label_1.label"
        },
        {
          "type": "url",
          "id": "button_link_1",
          "label": "t:sections.image-banner.blocks.buttons.settings.button_link_1.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.image-banner.preset.name",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "buttons"
        }
      ]
    }
  ]
}
{% endschema %}
