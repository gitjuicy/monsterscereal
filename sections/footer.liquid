<footer class="bg-gradient-to-b bg-purple">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'link_list' %}
        <h2>{{ block.settings.menu_heading }}</h2>
        <ul>
          {% for menu in block.settings.menu %}
            <li>
              <a href="{{ menu.url }}">{{ menu.name }}</a>
            </li>
          {% endfor %}
        </ul>
      {% when 'image_picker' %}
        {% if block.settings.footer_image.enabled %}
          {{ block.settings.footer_image | image_url: width: 400 | image_tag }}"
        {% endif %}
    {% endcase %}
  {% endfor %}
</footer>

{% schema %}
{
  "name": "Footer",
  "blocks": [
    {
      "type": "link_list",
      "name": "Footer menu",
      "settings": [
        {
          "id": "menu_heading",
          "type": "text",
          "default": "Meet the Monsters",
          "label": "Menu Heading"
        },
        {
          "id": "menu",
          "type": "menu_links",
          "label": "Footer link"
        }
      ]
    },
    {
      "type": "image_picker",
      "name": "Footer Image",
      "settings": [
        {
          "id": "footer_image",
          "type": "image",
          "label": "Image",
          "default": "",
          "info": "Select an image for the footer",
          "required": false
        },
        {
          "id": "enabled",
          "type": "boolean",
          "label": "Enabled",
          "default": false,
          "info": "Enable or disable the footer image"
        }
      ]
    }
  ]
}
{% endschema %}
